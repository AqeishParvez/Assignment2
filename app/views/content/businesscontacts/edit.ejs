<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= businesscontact._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Contact Name"
                    name="name" 
                    value="<%= businesscontact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="phoneTextField">Phone Number</label>
                    <input type="number" class="form-control"
                    id="phoneNumberTextField"
                    placeholder="Enter the Phone Number"
                    name="phonenumber" 
                    value="<%= businesscontact.phonenumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Email Address"
                    name="email" 
                    value="<%= businesscontact.email %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/business-contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

