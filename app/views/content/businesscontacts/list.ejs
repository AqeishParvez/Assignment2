<div class="container">
    <h1><%=title %></h1>
    <a href="/business-contact-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a Contact
    </a>
    <div class="row">
        <div class="column">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center"#></th>
                        <th scope="col">Contact Name</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Email Address</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="businessContactList">
                    <% for(let count=0; count < businesscontacts.length; count++) { %>
                        <tr>
                            <td scope="row" class="text-center"></td>
                            <td><%= businesscontacts[count].name %></td>
                            <td><%= businesscontacts[count].phonenumber %></td>
                            <td><%= businesscontacts[count].email %></td>
                            <td class = "text-center col-1">
                                <a class="btn btn-primary" href="/business-contact-edit/<%= businesscontacts[count].id %>">
                                    Update
                                </a>
                            </td>
                            <td class = "text-center col-1">
                                <a class="btn btn-warning" href="/business-contact-delete/<%= businesscontacts[count].id %>">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>